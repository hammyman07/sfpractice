<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Duplicate_Opp_No_Description</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Loss_Reason__c , &quot;Duplicate Opportunity&quot;), ISBLANK( Description ))</errorConditionFormula>
    <errorDisplayField>Description</errorDisplayField>
    <errorMessage>Please Enter Details about the Duplicate Opportunity</errorMessage>
</ValidationRule>
